<!-- Enhanced Mobile Bottom Navigation -->
<nav class="mobile-bottom-nav">
    <div class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>" onclick="navigateTo('/technician/dashboard')">
        <div class="nav-icon">
            <i class="bx bx-home"></i>
        </div>
        <span class="nav-label">Dashboard</span>
        <div class="nav-indicator"></div>
    </div>
    
    <div class="nav-item <%= currentPage === 'mapping' ? 'active' : '' %>" onclick="navigateTo('/technician/mapping')">
        <div class="nav-icon">
            <i class="bx bx-map"></i>
        </div>
        <span class="nav-label">Mapping</span>
        <div class="nav-indicator"></div>
    </div>
    
    <div class="nav-item <%= currentPage === 'customers' ? 'active' : '' %>" onclick="navigateTo('/technician/customers')">
        <div class="nav-icon">
            <i class="bx bx-user"></i>
        </div>
        <span class="nav-label">Customer</span>
        <div class="nav-indicator"></div>
    </div>
    
    <div class="nav-item <%= currentPage === 'troubletickets' ? 'active' : '' %>" onclick="navigateTo('/technician/troubletickets')">
        <div class="nav-icon">
            <i class="bx bx-error-circle"></i>
        </div>
        <span class="nav-label">Gangguan</span>
        <div class="nav-indicator"></div>
    </div>
    
    <div class="nav-item <%= currentPage === 'installations' ? 'active' : '' %>" onclick="navigateTo('/technician/installations')">
        <div class="nav-icon">
            <i class="bx bx-wrench"></i>
        </div>
        <span class="nav-label">Tiket</span>
        <div class="nav-indicator"></div>
    </div>
</nav>

<style>
.mobile-bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 -8px 32px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 12px 0 8px;
    z-index: 1000;
}

.nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    padding: 8px 12px;
    border-radius: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-width: 60px;
    position: relative;
}

.nav-item:hover {
    background: rgba(13, 110, 253, 0.1);
    transform: translateY(-2px);
}

.nav-item.active {
    background: rgba(13, 110, 253, 0.15);
    transform: translateY(-2px);
}

.nav-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    margin-bottom: 4px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: #6c757d;
    font-size: 20px;
    background: rgba(108, 117, 125, 0.1);
}

.nav-item.active .nav-icon {
    background: linear-gradient(135deg, #0d6efd, #198754);
    color: white;
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
}

.nav-label {
    font-size: 11px;
    color: #6c757d;
    font-weight: 600;
    text-align: center;
    line-height: 1.2;
    transition: all 0.3s ease;
}

.nav-item.active .nav-label {
    color: #0d6efd;
    font-weight: 700;
}

.nav-indicator {
    position: absolute;
    top: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background: #0d6efd;
    border-radius: 50%;
    opacity: 0;
    transition: all 0.3s ease;
}

.nav-item.active .nav-indicator {
    opacity: 1;
    transform: translateX(-50%) scale(1.5);
}

.nav-item:hover .nav-icon {
    transform: scale(1.05);
    background: rgba(13, 110, 253, 0.2);
    color: #0d6efd;
}

.nav-item:hover .nav-label {
    color: white;
}

/* Desktop - hide mobile navbar */
@media (min-width: 769px) {
    .mobile-bottom-nav {
        display: none;
    }
    
    /* Add bottom padding to body when mobile navbar is hidden */
    body {
        padding-bottom: 0 !important;
    }
}

/* Mobile - show navbar and add bottom padding */
@media (max-width: 768px) {
    body {
        padding-bottom: 80px;
    }
    
    .mobile-bottom-nav {
        display: flex;
    }
}

/* Ensure main content doesn't overlap with navbar */
.main-content {
    margin-bottom: 80px;
}

@media (min-width: 769px) {
    .main-content {
        margin-bottom: 0;
    }
}
</style>

<script>
function navigateTo(url) {
    // Add loading animation
    const navItem = event.currentTarget;
    const icon = navItem.querySelector('.nav-icon');
    icon.style.transform = 'scale(0.9)';
    
    setTimeout(() => {
        window.location.href = url;
    }, 150);
}

// Add active state management
document.addEventListener('DOMContentLoaded', function() {
    const currentPath = window.location.pathname;
    const navItems = document.querySelectorAll('.nav-item');
    
    navItems.forEach(item => {
        const icon = item.querySelector('.nav-icon');
        const label = item.querySelector('.nav-label');
        
        // Reset all items
        icon.classList.remove('active');
        
        // Check if current path matches this nav item
        if (currentPath.includes('/dashboard') && label.textContent === 'Dashboard') {
            icon.classList.add('active');
        } else if (currentPath.includes('/mapping') && label.textContent === 'Mapping') {
            icon.classList.add('active');
        } else if (currentPath.includes('/customers') && label.textContent === 'Customer') {
            icon.classList.add('active');
        } else if (currentPath.includes('/troubletickets') && label.textContent === 'Gangguan') {
            icon.classList.add('active');
        } else if (currentPath.includes('/installations') && label.textContent === 'Tiket') {
            icon.classList.add('active');
        }
    });
});
</script>
